#!/bin/bash

copy() {
  basename=$1
  rm -rf ${basename}*
  for at in $2; do
    echo "copying $at ..."
    rsync -rv --exclude=.git _$basename/ $at
    sed -i -e "s/__APP_TYPE__/$at/g" $at/manifest.toml
    rm $at/manifest.toml-e
    touch $at/AUTOGENERATED_DO_NOT_EDIT
  done
}

copy "go" "go1.1.2 go1.2 go1.2.1"
copy "ruby" "ruby1.9.3"
copy "python" "python2.7.3"
copy "scala" "java1.7-scala2.10.3"
